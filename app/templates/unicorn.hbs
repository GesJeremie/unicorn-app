<div class="layout layout--light">

    <div class="unicorn-header">
        <h3 class="unicorn-header__name">Your Unicorn <strong>curvy-princess-340</strong> is live ðŸŽ‰</h3>
        <h3 class="unicorn-header__people">Currently <strong>2 devices</strong> connected</h3>
    </div>

    <div class="grid grid--center">
        <div class="grid__cell grid__cell--40">
            <div class="tracks">
                <div class="tracks__artwork">
                    <img src="/unicorn.png" />
                </div>

                <div class="tracks__list">
                    <div class="tracks__item tracks__item--current">
                        <div class="grid grid--flush">
                            <div class="grid__cell grid__cell--30">
                                <img class="tracks__cover" src="https://i.ytimg.com/vi/z7Sf891yNZE/hqdefault.jpg?custom=true&w=336&h=188&stc=true&jpg444=true&pt=325&jpgq=90&dct_sp=110&sigh=LA8r2Nfmqz3BU0tWv47GutYbIEQ" />
                            </div>
                            <div class="grid__cell grid__cell--70">
                                <div class="tracks__details">
                                    <h3 class="title title--tracks">Haezer - Troublemaker feat. Tumi (Official Video)</h3>
                                    <h4 class="tracks__duration">0:00 / 3:26</h4>
                                    <div class="tracks__progress">
                                        <div class="tracks__progress-bar"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    {{#each model as |track| }}
                        <div class="tracks__item">
                            <div class="grid grid--flush">
                                <div class="grid__cell grid__cell--30">
                                    <img class="tracks__cover" src="{{ track.cover }}" />
                                </div>
                                <div class="grid__cell grid__cell--70">
                                    <div class="tracks__details-container">
                                        <div class="tracks__details">
                                            <h3 class="title title--tracks">{{ track.title }}</h3>
                                            <h4 class="tracks__duration">{{ track.duration }}</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
</div>
